   @12,5  SAY "CODICE PRODOTTO " GET COD 
   READ 
   SEEK COD
   CLEA 
   IF .NOT. EOF()
      @1,1  SAY DATE()
      @1,29 SAY "CORREZIONE MAGAZZINO"
      @1,71 SAY "UDDATPRO"
      @2,29 SAY "===================="
      @6,1   SAY "ARTICOLO: " GET COD_PD
      @6,26  SAY "PROD/DISTRIB.: " GET PRD
      @6,47  SAY "CANALE FORN: " DST
      @ 6,64 SAY "CATEGORIA: " CAT
      @ 9,1  SAY "DESCRIZIONE: " SAY DESCRIZ
      @12,1  SAY "COSTO: " SAY COSTO
      @12,19 SAY "% I.V.A.: " SAY IVA
      @12,34 SAY "PREZZO: " SAY PREZZO_1
      @12,53 SAY "DATA ULT.VENDITA " SAY ULTVEN
      @14,1  SAY "QUANTITA' ORD. MINIMO: " SAY QMIN
      @14,33 SAY "Q.TA' IN ORDINE: " SAY ORDINE
      @14,57 SAY "SCORTA MINIMA: " SAY SCMIN
      @16,1  SAY "GIACENZA CONTABILE: " SAY GIACONT
      @16,30 SAY "DINAMICA " SAY GIADIN
      @16,54 SAY "DATA ULT. CARICO " SAY ULTCAR
      @18,1  SAY "COSTO MEDIO " SAY COST_MED
      @18,25 SAY "COSTO CONTABILE " SAY COST_CONT
      @18,50 SAY "PROG.CARICHI VALORE " SAY CARVALOR
      @20,1  SAY "QUANTITA' PROGRESSIVE: CARICHI " SAY PROGCAR
      @20,42 SAY "SCARICHI " SAY PROGSCA
      @23,1  SAY "CONTINUI <S><N>? " GET ANC
      READ 
         REPL CODISTR WITH PRD+COD_PD
   ELSE 
      RETU 
   ENDI 
ENDD
flush 
CLEA 
RETU 
